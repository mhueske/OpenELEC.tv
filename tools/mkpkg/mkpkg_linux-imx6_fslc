echo "getting sources..."
  if [ ! -d linux-fslc_3.14.x.git ]; then
    git clone git@github.com:SolidRun/linux-fslc.git -b 3.14-1.0.x-mx6-sr linux-fslc_3.14.x.git
  fi

  cd linux-fslc_3.14.x.git
    git pull
    GIT_REV=`git log -n1 --format=%h`
  cd ..

echo "copying sources..."
  rm -rf linux-fslc-3.14-$GIT_REV
  cp -R linux-fslc_3.14.x.git linux-fslc-3.14-$GIT_REV

echo "cleaning sources..."
  rm -rf linux-flsc-3.14-$GIT_REV/.git

echo "packing sources..."
  tar cvJf linux-fslc-3.14-$GIT_REV.tar.xz linux-fslc-3.14-$GIT_REV

echo "remove temporary sourcedir..."
  rm -rf linux-fslc-3.14-$GIT_REV
